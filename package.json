{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "test": "",
    "start": "npm run serve",
    "serve": "node build/app.js",
    "watch-node": "nodemon build/app.js",
    "watch-ts": "tsc -w",
    "dev": "concurrently --kill-others \"npm run watch-ts\" \"npm run watch-node\" ",
    "tsnode": "ts-node src/app.ts",
    "pre-commit": "yarn tslint:fix && yarn prettier",
    "prettier": "prettier --write \"{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "tslint": "tslint --project tsconfig.json",
    "tslint:fix": "tslint --project tsconfig.json --fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^11.13.7",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5",
    "yarn": "^1.15.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  }
}
