{
    "name": "typescript-boilerplate",
    "version": "0.0.1",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist",
        "build": "tsc",
        "dev": "concurrently --kill-others \"npm run watch:ts\" \"npm run watch:node\"",
        "lint": "tsc --noEmit && eslint src --ext ts --ext js --quiet --fix",
        "watch:ts": "tsc --watch",
        "watch:node": "nodemon",
        "test": "jest"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^8.1.0",
        "envalid": "^5.0.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.2",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "concurrently": "^4.1.2",
        "eslint": "^6.2.2",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^3.0.4",
        "jest": "^24.9.0",
        "lint-staged": "^9.2.1",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "git add"
        ]
    }
}
